---
import Layout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import TripleGallery from "../components/TripleGallery.astro";
import ImageWithInfo from "../components/ImageWithInfo.astro";
import TextSection from "../components/TextSection.astro";
import { homeGalleryImages } from "../data/HomeGalleryImages.ts";
import { homeImageWithInfoData } from "../data/DataIndexImageWithInfo.ts";
import { homeTextSections } from "../data/TextSections.ts";
---

<Layout>
    <Header />
    <main>
        <div class="pt-16 px-4 sm:px-6 md:px-8 max-w-full md:max-w-max mx-auto">
            <div class="flex flex-col md:flex-row items-start md:items-baseline gap-4 md:gap-[25rem] mb-6">
                <h1 class="text-4xl sm:text-5xl md:text-7xl font-bold text-neutral-900">
                    Puerto Beauty
                </h1>
                <h2 class="text-2xl sm:text-3xl md:text-5xl font-light text-neutral-500 mt-2 md:mt-0">
                    Sal√≥n & Spa
                </h2>
            </div>

            <TripleGallery images={homeGalleryImages} />
        </div>
        <div class="px-2 sm:px-4 md:px-0">
            {homeTextSections.map((item) => <TextSection {...item} />)}
        </div>
        <div class="bg-[#fdf1f4]">
            <div class="pt-12 sm:pt-16 md:pt-24 px-2 sm:px-4 md:px-8 max-w-full md:max-w-[89rem] mx-auto">
                {homeImageWithInfoData.map((item, idx) => (
                  <>
                    <ImageWithInfo {...item} />
                    {idx < homeImageWithInfoData.length - 1 && (
                      <hr class="my-8 sm:my-10 md:my-12 border-t border-gray-200 w-11/12 sm:w-4/5 md:w-3/4 mx-auto" />
                    )}
                  </>
                ))}
            </div>
        </div>
    </main>
</Layout>
