---
import Layout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import TripleGallery from "../components/TripleGallery.astro";
import ImageWithInfo from "../components/ImageWithInfo.astro";
import TextSection from "../components/TextSection.astro";
import { homeGalleryImages } from "../data/HomeGalleryImages.ts";
import { homeImageWithInfoData } from "../data/DataIndexImageWithInfo.ts";
import { homeTextSections } from "../data/TextSections.ts";
import "aos/dist/aos.css";
---

<Layout>
    <Header />
    <main>
        <div
            class="pt-20 sm:pt-24 md:pt-28 px-3 sm:px-6 md:px-8 max-w-full md:max-w-6xl mx-auto"
        >
            <div
                class="flex flex-col md:flex-row items-center md:items-baseline gap-3 md:gap-12 lg:gap-[25rem] mb-6 text-center md:text-left"
            >
                <h1
                    class="text-3xl sm:text-4xl md:text-6xl lg:text-7xl font-bold text-neutral-900 order-1"
                >
                    Puerto Beauty
                </h1>
                <h2
                    class="text-xl sm:text-2xl md:text-4xl lg:text-5xl font-light text-neutral-500 order-2 md:order-2"
                >
                    Sal√≥n & Spa
                </h2>
            </div>

            <TripleGallery data-aos="fade-in" images={homeGalleryImages} />
        </div>
        <div
            data-aos="zoom-in"
            data-aos-easing="ease-in-out"
            data-aos-duration="1000"
            data-aos-anchor-placement="center-bottom"
            class="px-3 sm:px-4 md:px-6 max-w-full md:max-w-4xl mx-auto"
        >
            {homeTextSections.map((item) => <TextSection {...item} />)}
        </div>
        <div  class="bg-[#fdf1f4]">
            <div
                class="sm:pt-14 md:pt-20 md:pb-20 px-7 py-7 sm:px-4 md:px-6 max-w-full md:max-w-6xl mx-auto"
                
            >
                {
                    homeImageWithInfoData.map((item, idx) => (
                        <>
                            <ImageWithInfo {...item} />
                            {idx < homeImageWithInfoData.length - 1 && (
                                <hr 
                                class="my-6 sm:my-8 md:my-10 border-t border-gray-200 w-11/12 sm:w-4/5 md:w-3/4 mx-auto" />
                            )}
                        </>
                    ))
                }
            </div>
        </div>
    </main>
</Layout>
