---
import Layout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import TripleGallery from "../components/TripleGallery.astro";
import ImageWithInfo from "../components/ImageWithInfo.astro";
import TextSection from "../components/TextSection.astro";
import { homeGalleryImages } from "../data/HomeGalleryImages.ts";
import { homeImageWithInfoData } from "../data/DataIndexImageWithInfo.ts";
import { homeTextSections } from "../data/TextSections.ts";
---

<Layout>
    <Header />
    <main>
        <div class="pt-24 px-4 md:px-8 max-w-max mx-auto">
            <div class="flex items-baseline gap-[25rem] mb-6">
                <h1 class="text-7xl font-bold text-neutral-900">
                    Puerto Beauty
                </h1>
                <h2 class="text-5xl font-light text-neutral-500">
                    Sal√≥n & Spa
                </h2>
            </div>

            <TripleGallery images={homeGalleryImages} />
        </div>
        <div>
            {homeTextSections.map((item) => <TextSection {...item} />)}
        </div>
        <div class="bg-[#fdf1f4]">
            <div class="pt-24 px-4 md:px-8 max-w-[89rem] mx-auto">
                {homeImageWithInfoData.map((item, idx) => (
                  <>
                    <ImageWithInfo {...item} />
                    {idx < homeImageWithInfoData.length - 1 && (
                      <hr class="my-12 border-t border-gray-200 w-3/4 mx-auto" />
                    )}
                  </>
                ))}
            </div>
        </div>
    </main>
</Layout>
