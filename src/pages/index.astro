---
import Layout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import TripleGallery from "../components/TripleGallery.astro";
import ImageWithInfo from "../components/ImageWithInfo.astro";
import TextSection from "../components/TextSection.astro";
import { homeGalleryImages } from "../data/HomeGalleryImages.ts";
import { homeImageWithInfoData } from "../data/DataIndexImageWithInfo.ts";
import { homeTextSections } from "../data/TextSections.ts";
import "aos/dist/aos.css";
import Location from "../components/Location.astro";
import Gallery from "../components/Gallery.astro";
---

<Layout>
    <Header />
    <main
        class="min-h-screen bg-gradient-to-br from-white via-pink-50/30 to-rose-100/40"
    >
        <!-- Hero Section - Enhanced -->
        <section class="relative overflow-hidden">
            <!-- Decorative background elements -->
            <div
                class="absolute top-20 right-20 w-72 h-72 bg-gradient-to-br from-pink-100/50 to-rose-100/50 rounded-full blur-3xl pointer-events-none"
            >
            </div>
            <div
                class="absolute bottom-40 left-20 w-48 h-48 bg-gradient-to-tr from-amber-50/60 to-pink-50/60 rounded-full blur-3xl pointer-events-none"
            >
            </div>

            <div
                class="pt-24 sm:pt-28 md:pt-32 lg:pt-40 pb-16 lg:pb-20 px-6 lg:px-8 max-w-7xl mx-auto"
            >
                <!-- Hero titles with enhanced styling -->
                <div class="text-center mb-16 lg:mb-20 space-y-6 lg:space-y-8">
                    <!-- Decorative line -->
                    <div
                        class="w-20 h-1 bg-gradient-to-r from-pink-400 to-rose-400 rounded-full mx-auto"
                    >
                    </div>

                    <div class="space-y-4">
                        <h1
                            class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl xl:text-8xl font-light text-neutral-900 leading-tight"
                        >
                            <span class="font-extralight text-neutral-600"
                                >Puerto</span
                            >
                            <span
                                class="block font-semibold bg-gradient-to-r from-pink-600 to-rose-600 bg-clip-text text-transparent"
                            >
                                Beauty
                            </span>
                        </h1>

                        <h2
                            class="text-xl sm:text-2xl md:text-3xl lg:text-4xl font-light text-neutral-500 tracking-wide"
                        >
                            Salón & Spa
                        </h2>
                    </div>

                    <!-- Elegant subtitle -->
                    <p
                        class="text-lg sm:text-xl text-neutral-600 font-light max-w-2xl mx-auto leading-relaxed"
                    >
                        Donde la belleza se encuentra con la excelencia
                    </p>
                </div>

                <!-- Gallery with enhanced container -->
                <div class="relative">
                    <TripleGallery
                        data-aos="fade-up"
                        images={homeGalleryImages}
                    />
                </div>
            </div>
        </section>
        <!-- About Section -->
        <section class="relative py-8 lg:py-12">
            {homeTextSections.map((item) => <TextSection {...item} />)}
        </section>

        <!-- Services Section - Enhanced -->
        <section class="relative py-16 lg:py-24">
            <!-- Decorative background -->
            <div
                class="absolute top-20 left-10 w-64 h-64 bg-gradient-to-br from-rose-100/40 to-pink-100/40 rounded-full blur-3xl pointer-events-none"
            >
            </div>
            <div
                class="absolute bottom-20 right-10 w-48 h-48 bg-gradient-to-tr from-amber-50/50 to-rose-50/50 rounded-full blur-3xl pointer-events-none"
            >
            </div>

            <div class="max-w-7xl mx-auto px-6 lg:px-8">
                <!-- Section header -->
                <div class="text-center mb-16 lg:mb-20 space-y-6">
                    <div
                        class="w-20 h-1 bg-gradient-to-r from-pink-400 to-rose-400 rounded-full mx-auto"
                    >
                    </div>
                    <h2
                        class="text-3xl sm:text-4xl lg:text-5xl font-light text-neutral-900 leading-tight"
                    >
                        <span class="font-extralight text-neutral-600"
                            >Nuestros</span
                        >
                        <span
                            class="block font-semibold bg-gradient-to-r from-pink-600 to-rose-600 bg-clip-text text-transparent"
                        >
                            Servicios
                        </span>
                    </h2>
                </div>

                <!-- Services grid -->
                <div class="space-y-16 lg:space-y-24">
                    {
                        homeImageWithInfoData.map((item, idx) => (
                            <div class="relative">
                                <ImageWithInfo {...item} />
                                {idx < homeImageWithInfoData.length - 1 && (
                                    <div class="flex justify-center mt-16 lg:mt-20">
                                        <div class="w-24 h-px bg-gradient-to-r from-transparent via-pink-300 to-transparent" />
                                    </div>
                                )}
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>
        <!-- Location Section -->
        <section class="relative py-16 lg:py-20">
            <div class="max-w-7xl mx-auto">
                <Location
                    location="Puerto Montt"
                    title="¿Dónde encontrarnos?"
                    businessName="Puerto Beauty"
                    address="Pedro Montt 65, Puerto Montt, Chile"
                    phone="+56 9 4512 6327"
                    googleMapsUrl="https://share.google/RmJBpt4uGF8zbgcHX"
                    latitude="-41.4697"
                    longitude="-72.9423"
                />
            </div>
        </section>
        <section class="relative py-16 lg:py-20">
            <Gallery images={homeGalleryImages} />
        </section>
    </main>
</Layout>
