---
export interface Props {
  imageSrc: string;
  imageAlt: string;
  title: string;
  description: string;
  features?: string[];
  reverse?: boolean;
}

const { imageSrc, imageAlt, title, description, features, reverse = false } = Astro.props;
---

<div class={`flex flex-col ${reverse ? 'md:flex-row-reverse' : 'md:flex-row'} gap-8 items-center mb-16`}>
  <!-- Imagen -->
  <div class="w-full md:w-1/2">
    <div class="relative group overflow-hidden rounded-2xl shadow-xl shadow-rose-200/30">
      <img
        src={imageSrc}
        alt={imageAlt}
        class="w-full h-60 object-cover transition-transform duration-300 group-hover:scale-105"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
    </div>
  </div>

  <!-- Información -->
  <div class="w-full md:w-1/2 space-y-6">
    <div>
      <h3 class="text-3xl md:text-4xl font-bold text-neutral-900 mb-4">{title}</h3>
      <p class="text-lg text-neutral-600 leading-relaxed">{description}</p>
    </div>

    {features && features.length > 0 && (
      <div class="space-y-3">
        <h4 class="text-xl font-semibold text-pink-800">Características:</h4>
        <ul class="space-y-2">
          {features.map((feature) => (
            <li class="flex items-center text-neutral-700">
              <svg class="w-5 h-5 text-pink-600 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              {feature}
            </li>
          ))}
        </ul>
      </div>
    )}

    <div class={`pt-4 flex ${reverse ? 'justify-start' : 'justify-end'}`}>
      <a href="/contact" class="inline-flex items-center px-6 py-3 border border-pink-200 text-pink-700 hover:bg-pink-50 rounded-full text-sm font-medium transition-colors duration-300">
        Más información
        <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </div>
</div>