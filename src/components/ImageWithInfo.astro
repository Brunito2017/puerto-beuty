---
export interface Props {
  imageSrc: string;
  imageAlt: string;
  title: string;
  description: string;
  features?: string[];
  reverse?: boolean;
  animation? : string;
  delay?: string; // Optional delay for animation
}

const { imageSrc, imageAlt, title, description, features, reverse = false, animation, delay } = Astro.props;
---
<div data-aos={animation} data-aos-duration={delay} class={`flex flex-col ${reverse ? 'lg:flex-row-reverse' : 'lg:flex-row'} gap-8 lg:gap-16 items-center mb-16 lg:mb-24 px-4 lg:px-0`}>
  <!-- Imagen -->
  <div class="w-full lg:w-1/2 relative">
    <div class="relative group">
      <!-- Decorative background elements -->
      <div class="absolute -inset-4 bg-gradient-to-r from-pink-100 via-rose-50 to-amber-50 rounded-3xl opacity-60 group-hover:opacity-80 transition-all duration-500 blur-sm"></div>
      <div class="absolute -inset-2 bg-gradient-to-br from-white to-pink-50 rounded-2xl shadow-2xl shadow-pink-200/20"></div>
      
      <!-- Main image container -->
      <div class="relative overflow-hidden rounded-2xl shadow-2xl shadow-neutral-900/10 group-hover:shadow-neutral-900/20 transition-all duration-700">
        <img
          src={imageSrc}
          alt={imageAlt}
          class="w-full h-72 sm:h-80 lg:h-96 object-cover transition-all duration-700 group-hover:scale-110"
          style="aspect-ratio: 3/4;"
        />
        <!-- Elegant overlay -->
        <div class="absolute inset-0 bg-gradient-to-t from-black/20 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-all duration-700"></div>
        <!-- Subtle shine effect -->
        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-1000 ease-out"></div>
      </div>
    </div>
  </div>

  <!-- Información -->
  <div class="w-full lg:w-1/2 space-y-6 lg:space-y-8">
    <!-- Header section -->
    <div class="space-y-4 lg:space-y-6">
      <!-- Decorative line -->
      <div class="w-16 h-1 bg-gradient-to-r from-pink-400 to-rose-400 rounded-full"></div>
      
      <h3 class="text-3xl sm:text-4xl lg:text-5xl font-light text-neutral-900 leading-tight">
        <span class="font-extralight text-neutral-600">{title.split(' ')[0]}</span>
        <span class="block font-semibold bg-gradient-to-r from-pink-600 to-rose-600 bg-clip-text text-transparent">
          {title.split(' ').slice(1).join(' ')}
        </span>
      </h3>
      
      <p class="text-lg sm:text-xl text-neutral-600 leading-relaxed font-light max-w-prose">
        {description}
      </p>
    </div>

    {features && features.length > 0 && (
      <div class="space-y-4 lg:space-y-6">
        <div class="flex items-center space-x-3">
          <div class="w-2 h-2 bg-gradient-to-r from-pink-400 to-rose-400 rounded-full"></div>
          <h4 class="text-xl sm:text-2xl font-medium text-neutral-800 tracking-wide">Características</h4>
        </div>
        
        <div class="grid gap-3 sm:gap-4">
          {features.map((feature, index) => (
            <div class="group flex items-start space-x-4 p-4 rounded-xl hover:bg-gradient-to-r hover:from-pink-50 hover:to-rose-50 transition-all duration-300">
              <!-- Enhanced icon -->
              <div class="flex-shrink-0 w-8 h-8 bg-gradient-to-br from-pink-100 to-rose-100 rounded-full flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                <svg class="w-4 h-4 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              
              <span class="text-neutral-700 font-medium leading-relaxed">
                {feature}
              </span>
            </div>
          ))}
        </div>
      </div>
    )}

    <!-- Call to action -->
    <div class={`pt-6 lg:pt-8 flex ${reverse ? 'justify-start' : 'justify-start lg:justify-end'}`}>
      <a href="/contact" class="group relative inline-flex items-center overflow-hidden rounded-full bg-gradient-to-r from-pink-600 to-rose-600 px-8 py-4 text-white shadow-2xl shadow-pink-500/25 transition-all duration-300 hover:shadow-pink-500/40 hover:scale-105">
        <!-- Background animation -->
        <div class="absolute inset-0 bg-gradient-to-r from-rose-600 to-pink-600 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        
        <!-- Content -->
        <span class="relative text-sm sm:text-base font-medium tracking-wide">
          Más información
        </span>
        
        <!-- Animated arrow -->
        <svg class="relative ml-3 w-5 h-5 transition-transform duration-300 group-hover:translate-x-1" 
             fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
        
        <!-- Shine effect -->
        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-700 ease-out"></div>
      </a>
    </div>
  </div>
</div>