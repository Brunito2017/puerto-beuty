---
export interface Props {
  title?: string;
  subtitle?: string;
  content: string;
  align?: 'left' | 'center' | 'right';
  size?: 'sm' | 'md' | 'lg';
  background?: 'transparent' | 'light' | 'dark';
  className?: string;
}

const { 
  title, 
  subtitle, 
  content, 
  align = 'left', 
  size = 'md',
  background = 'transparent',
  className = ''
} = Astro.props;

const alignClasses = {
  left: 'text-left',
  center: 'text-center',
  right: 'text-right'
};

const sizeClasses = {
  sm: 'text-sm md:text-base',
  md: 'text-base md:text-lg',
  lg: 'text-lg md:text-xl'
};

const backgroundClasses = {
  transparent: 'bg-transparent',
  light: 'bg-rose-50/50 py-12',
  dark: 'bg-neutral-900 text-white py-12'
};
---

<section class={`my-8 sm:my-10 md:my-12 w-full ${backgroundClasses[background]} ${className}`}>
  <div class="max-w-2xl sm:max-w-3xl md:max-w-4xl mx-auto px-2 sm:px-4 md:px-8">
    {title && (
      <h2 class={`text-2xl sm:text-3xl md:text-4xl font-bold text-neutral-900 mb-3 sm:mb-4 ${alignClasses[align]} ${background === 'dark' ? 'text-white' : 'text-neutral-900'}`}>
        {title}
      </h2>
    )}
    
    {subtitle && (
      <h3 class={`text-lg sm:text-xl md:text-2xl font-light text-neutral-600 mb-4 sm:mb-6 ${alignClasses[align]} ${background === 'dark' ? 'text-neutral-300' : 'text-neutral-600'}`}>
        {subtitle}
      </h3>
    )}
    
    <div class={`prose prose-base sm:prose-lg max-w-none ${alignClasses[align]} ${sizeClasses[size]} ${background === 'dark' ? 'prose-invert' : ''}`}>
      <p class={`leading-relaxed ${background === 'dark' ? 'text-neutral-200' : 'text-neutral-700'}`}>
        {content}
      </p>
    </div>
  </div>
</section>