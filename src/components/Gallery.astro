---
import type { Image } from '../types/index.ts';

export interface Props {
  images: Image[];
}

const { images } = Astro.props;
---

<div id="horizontal-thumbnails" class="relative w-full max-w-2xl mx-auto">
  {images && images.length > 0 ? (
    <div class="carousel relative">
      <div class="carousel-body h-80 opacity-100 flex items-center justify-center relative">
        {images.map((img, idx) => (
          <div class="carousel-slide hidden" id={`slide-${idx}`}>
            <div class="flex w-full h-80 justify-center">
              <img
                src={img.src}
                class="w-full h-full object-cover rounded-xl shadow-lg"
                alt={img.alt}
                loading="lazy"
              />
            </div>
          </div>
        ))}

        <!-- Por defecto muestra el primer slide -->
        <div class="carousel-slide relative" id="slide-active">
          <div class="flex w-full h-[30rem] justify-center">
            <img
              src={images[0].src}
              class="w-full h-full object-cover rounded-xl shadow-lg"
              alt={images[0].alt}
              loading="lazy"
            />
          </div>
          <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/60 via-black/10 to-transparent p-4 rounded-b-xl">
          </div>
        </div>
      </div>

      <div class="carousel-pagination bg-base-100 absolute left-0 right-0 z-10 h-24 gap-2 flex justify-center overflow-x-auto pt-2">
        {images.map((img, idx) => (
          <img
            src={img.src}
            class={`carousel-pagination-item object-cover opacity-60 hover:opacity-100 rounded-lg cursor-pointer transition-opacity duration-300`}
            alt={img.alt}
            style="width:64px;height:64px"
            loading="lazy"
            onclick={`const active=document.getElementById('slide-active');if(active){active.querySelector('img').src='${img.src}';active.querySelector('h3').textContent='${img.title}';active.querySelector('p').textContent='${img.description}';}`}
          />
        ))}
      </div>

      {/* <!-- Previous Slide -->
      <button type="button" class="carousel-prev left-5 max-sm:left-3 opacity-50 w-10 h-10 bg-base-100 flex items-center justify-center rounded-full shadow-base-300/20 shadow-sm absolute top-1/2 -translate-y-1/2 z-20">
        <span class="icon-[tabler--chevron-left] w-5 h-5 cursor-pointer"></span>
        <span class="sr-only">Previous</span>
      </button>
      <!-- Next Slide -->
      <button type="button" class="carousel-next right-5 max-sm:right-3 opacity-50 w-10 h-10 bg-base-100 flex items-center justify-center rounded-full shadow-base-300/20 shadow-sm absolute top-1/2 -translate-y-1/2 z-20">
        <span class="icon-[tabler--chevron-right] w-5 h-5"></span>
        <span class="sr-only">Next</span>
      </button> */}
    </div>
  ) : (
    <div class="py-12 text-center text-neutral-500">No hay im√°genes para mostrar</div>
  )}
</div>